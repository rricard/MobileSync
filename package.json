{
  "name": "MobileSync",
  "version": "0.0.1",
  "babel":{
    "presets": ["babel-preset-es2015","babel-preset-react"],
    "retainLines": true,
    "compact": true,
    "comments": false,
    "env": {
      "production":{
        "plugins":["babel-relay-plugin","node-env-inline", "dunderscore-dev-inline"]
      },
      "test":{
        "plugins":["babel-relay-plugin",{
          "position": "after",
          "transformer": "inlineRequires"
        }]
      }
    }
  },
  "private": true,
  "scripts": {
    "data-start": "node data/index.js",
    "ui-start": "./node_modules/react-native/packager/packager.sh --cleanCache --root ./src --transformer ./node_modules/react-native/packager/transformer.js",
    "start": "npm run data-start & npm run ui-start",
    "data-develop": "nodemon data/index.js",
    "develop": "npm run data-develop & npm run ui-start",
    "data-test": "mocha --compilers js:babel/register --recursive -r co-mocha data/tests",
    "ui-test": "jest",
    "test": "npm run data-test && npm run ui-test",
    "lint": "eslint .",
    "postinstall": "sh ./relay-patcher/patch.sh"
  },
  "dependencies": {
    "babel": "^6.0.0",
    "babel-relay-plugin": "^0.6.0",
    "babel-runtime": "^6.0.0",
    "babel-register": "^6.3.13",
    "babel-preset-es2015": "^6.1.0",
    "babel-preset-react": "^6.1.18",
    "bluebird": "^2.10.2",
    "co": "^4.6.0",
    "express": "^4.13.3",
    "express-graphql": "^0.4.0",
    "fbjs-scripts": "^0.2.2",
    "graphql": "^0.4.7",
    "graphql-relay": "^0.3.2",
    "mime": "^1.3.4",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-native": "^0.16.0",
    "react-relay": "^0.6.0",
    "serve-static": "^1.10.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-jest": "^6.0.0",
    "babel-loader": "^6.2.0",
    "co-mocha": "^1.1.2",
    "eslint": "^1.6.0",
    "eslint-plugin-flowtype": "^1.0.0",
    "jest-cli": "^0.5.10",
    "mocha": "^2.3.3",
    "nodemon": "^1.7.1"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  }
}
